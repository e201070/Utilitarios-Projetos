## Netplan Ubuntu 22.04
network:
  ethernets:
    ens160:
      addresses:
      - 99.98.97.2/24
      nameservers:
        addresses:
        - 172.168.100.100
        search:
        - rcc.lss
      routes:
      - to: default
        via: 99.98.97.1
  version: 2

