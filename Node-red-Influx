## Netplan Ubuntu 20.04
network:
  ethernets:
    ens160:
      addresses:
      - 172.168.100.83/24
      gateway4: 172.168.100.1
      nameservers:
        addresses:
        - 172.160.100.100
        search:
        - rcc.lss
  version: 2
